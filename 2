#include <stdio.h>

int main() {
    // Переменная для хранения целого числа
    int num;

    // Запрашиваем число у пользователя
    printf("Введите целое число: ");
    scanf("%d", &num);

    // Определяем четность с использованием оператора %
    if (num % 2 == 0) {
        printf("%d — четное число.\n", num);
    } else {
        printf("%d — нечетное число.\n", num);
    }

    return 0;
}
